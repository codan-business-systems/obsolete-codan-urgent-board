<mvc:View
	controllerName="codan.zurgentboard.controller.Main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml"
	displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Table
						id="tableMain"
						width="auto"
						class="sapUiResponsiveMargin"
						items="{
							path: '/Items',
							parameters: {
								operationMode: 'Client',
								threshold: 500
							}
						}">
		
						<headerToolbar>
							<Toolbar>
								<Button
									tooltip="{i18n>createNew}"
									press="showCreateDialog"
									icon="sap-icon://create-form"/>
								<ToolbarSpacer />
								<SearchField
									id="searchField"
									value="{viewModel>/search/value}"
									search="onSearch"
									width="auto">
								</SearchField>
								<Button icon="sap-icon://drop-down-list" tooltip="Search Settings" press="toggleSearchSettings"/>
							</Toolbar>
						</headerToolbar>
		
						<columns>
							<Column id="colMaterial" width="27.5%">
								<Text text="Material"/>
							</Column>
							<Column id="colType">
								<Text text="Order Type"/>
							</Column>
							<Column id="colOrderId">
								<Text text="Order Id"/>
							</Column>
							<Column id="colItemId">
								<Text text="Item Id"/>
							</Column>
							<Column id="colQuantity" hAlign="Right">
								<Text text="Quantity"/>
							</Column>
							<Column id="colDueDate">
								<Text text="Due"/>
							</Column>
							<Column id="colContact">
								<Text text="Contact"/>
							</Column>
							<Column>
							</Column>
						</columns>
		
						<items>
							<ColumnListItem>
								<cells>
									<HBox>
										<ObjectIdentifier title="{material}"/>
										<Text text=" ({description})" class="zDescription"/>
									</HBox>
									<Text text="{typeText}"/>
									<Text text="{objectkey}"/>
									<Text text="{line}"/>
									<ObjectNumber number="{quantity}" unit="{uom}"/>
									<Text text="{ path: 'dueDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy' } }"/>
									<Text text="{enteredByName}"/>
									<Button
										icon="sap-icon://overflow"
										press="toggleItemOverflowPopover"
										tooltip="Show more item details"
										type="{
											parts: ['comments', 'deliverTo'],
											formatter: '.formatters.itemOverflowButtonType'
										}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<dependents>
					 <core:Fragment fragmentName="codan.zurgentboard.view.SearchSettings" type="XML" />
					 <core:Fragment fragmentName="codan.zurgentboard.view.CreateItemDialog" type="XML" />
				</dependents>
			</Page>
		</pages>
	</App>
</mvc:View>